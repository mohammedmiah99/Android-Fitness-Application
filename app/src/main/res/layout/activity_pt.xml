<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".PTActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/backArrowpt"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="63dp"
                android:layout_height="43dp"
                android:layout_gravity="left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a personalized\nworkout for your trainee"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/blackcolor"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/txt_IDpt"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:hint=" Their Personal ID"
                android:layout_marginTop="35dp"
                android:paddingLeft="15dp"
                android:inputType="text"
                android:textColorHint="@color/greycolor"
                android:elevation="5dp"
                android:background="@drawable/btn" />

            <GridLayout
                android:columnCount="2"
                android:rowCount="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/btnPPL"
                android:layout_width="325dp"
                android:layout_height="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <TextView
                    android:textSize="30dp"
                    android:gravity="center"
                    android:textColor="@color/blackcolor"
                    android:text="PUSH PULL LEGS\n 6 DAY SPLIT"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnPPL3"
                android:layout_width="325dp"
                android:layout_height="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <TextView
                    android:textSize="30dp"
                    android:gravity="center"
                    android:textColor="@color/blackcolor"
                    android:text="PUSH PULL LEGS\n 3 DAY SPLIT"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnUL"
                android:layout_width="325dp"
                android:layout_height="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <TextView
                    android:textSize="30dp"
                    android:gravity="center"
                    android:textColor="@color/blackcolor"
                    android:text="UPPER LOWER\n 4 DAY SPLIT"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>