<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".BlogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/btn_back98"
            android:layout_width="63dp"
            android:layout_height="43dp"
            android:layout_gravity="left" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blackcolor"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Search..."
            android:id="@+id/searchfilter">
        </EditText>
        <ListView
            android:id="@+id/listviewNote"
            android:layout_width="match_parent"
            android:layout_height="445dp"
            android:hint=" Title"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="@color/greycolor"
            android:elevation="5dp"
            android:background="@drawable/btn5" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:text="Add a Post"
            android:textColor="@color/whitecolor"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:background="@drawable/btn4"/>

    </LinearLayout>

</ScrollView>