<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecolor"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/whitecolor"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_navigation">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="63dp"
            android:layout_height="43dp"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change your Account Settings"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/blackcolor"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/imperialButton2"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:textOff="Metric"
            android:textOn="Imperial"
            android:thumb="@drawable/sw_thumb"
            android:textColor="@color/greycolor"
            android:textAllCaps="false"
            app:track="@drawable/sw_track"
            app:showText="true"
            android:layout_marginTop="5dp" />

        <EditText
        android:id="@+id/editFName"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn5"
        android:elevation="5dp"
        android:hint=" Change Your First Name"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textColorHint="@color/greycolor" />

        <EditText
            android:id="@+id/editLName"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn5"
            android:elevation="5dp"
            android:hint=" Change Your Last Name"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColorHint="@color/greycolor" />

        <EditText
            android:id="@+id/editAge"
            android:digits="1234567890"
            android:inputType="number"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn5"
            android:elevation="5dp"
            android:hint=" Change Your Age"
            android:paddingLeft="15dp"
            android:textColorHint="@color/greycolor" />

        <EditText
            android:id="@+id/editWeight"
            android:digits="1234567890"
            android:inputType="number"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn5"
            android:elevation="5dp"
            android:hint="Change Your Weight (kg)"
            android:paddingLeft="15dp"
            android:textColorHint="@color/greycolor" />

        <EditText
            android:id="@+id/editHeight"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn5"
            android:elevation="5dp"
            android:hint="Change Your Height (cm)"
            android:inputType="numberDecimal"
            android:paddingLeft="15dp"
            android:textColorHint="@color/greycolor" />

        <Button
            android:id="@+id/save"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:text="Change Details"
            android:textColor="@color/whitecolor"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:elevation="5dp"
            android:background="@drawable/btn4"/>
        <Button
            android:id="@+id/btnContact"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:text="Contact Us"
            android:textColor="@color/whitecolor"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:background="@drawable/joinbtn"/>

    </LinearLayout>
</ScrollView>
    </RelativeLayout>
</LinearLayout>